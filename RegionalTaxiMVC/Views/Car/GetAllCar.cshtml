                    <h4 class="card-title"> Barcha mashinalar</h4>
                   <p>

                   </p>
                    <table class="table table-striped table-bordered table-hover table-responsive">
                        <thead class="table-light">
                            <tr>
                                <th>#</th>
                                <th>Nomi</th>
                                <th>Ishlab chiqarilgan sanasi</th>
                                <th>Odam sig'imi</th>
                                <th>Rangi</th>
                                <th>Holati</th>
                                <th>Tan narxi</th>
                                <th>Davlat raqami</th>
                                <th>Amallar</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var car in Model)
                            {
                                <tr>
                                    <td>@car.Id</td>
                                    <td>@car.Name</td>
                                    <td>@car.Birth_date.ToString("yyyy-MM-dd")</td>
                                    <td>@car.Person_size</td>
                                    <td>@car.Car_color</td>
                                    <td>
                                        @if (car.condions == ConditionsLevel.Yaxshi)
                                        {
                                            <span class="badge bg-success">Yangi</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-warning">Ishlatilgan</span>
                                        }
                                    </td>
                                    <td>@string.Format("{0:C}", car.Price)</td>
                                    <td>@car.state_number</td>
                                    <td>
                                        <a href="@Url.Action("Edit", "Car", new { id = car.Id })" class="btn btn-sm btn-primary">
                                            <i class="fas fa-edit"></i> Tahrirlash
                                        </a>
                                        <a href="#" class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@car.Id">
                                            <i class="fas fa-trash-alt"></i> O'chirish
                                        </a>

                                    </td>
                                    
                                    
                                </tr>
                                
                            }
                        </tbody>
